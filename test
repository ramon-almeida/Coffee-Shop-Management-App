option_menu = {
	1: 'Option 1' , 
	2: 'Option 2',
	3: 'Exit' ,
}

# This function will print out your option menu
def print_options():
	
	for key in option_menu.keys():
		print(key , '---' , option_menu[key])

# Create your option functions here. / Add more for your needs
